<% include userheader %>
<h1> welcome to iCoder user courses page</h1>
<div class="container my-4">
  <section>
    <div class="bd-example">
      <div class="row row-cols-1 row-cols-md-3">
        <%for(let row of result) { %>
        <div class="col mb-4">
          <div class="card">
            <a style="text-decoration: none;color: black;"
              href="course_details?coursenm=<%= row.coursenm %>&sunm=<%=sunm%>&ctatus=0">
              <% if (row.file1){ %>
              <img src="../images/courses/<%=row.file1 %>" class="bd-placeholder-img card-img-top" width="100%"
                height="180" />
              <% } %>
              <div class="card-body" id="hover12">
                <h6 class="card-title"><%= row.coursenm %></h6>
                <p class="card-title"><%= row.facultynm%></p>
                <p class="card-text"><%= row.text %></p>
              </div>
            </a>
          </div>
        </div>
        <% } %>
      </div>
    </div>

  </section>
</div>


<% include script%>
<% include footer %>